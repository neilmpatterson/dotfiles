#!/bin/zsh

if [ -z "$1" ]; then
	echo "Error: A file name must be set, e.g. on \"the wonderful thing about tiggers\"."
	exit 1
fi

file_name=$(echo "$1" | tr ' ' '-')
formatted_file_name=$(date "+%Y-%m-%d")_${file_name}.md
second_brain="/Users/neil.patterson/library/Mobile Documents/iCloud~md~obsidian/Documents/Work"
note_path="$second_brain/0 Inbox/$formatted_file_name"
touch "$note_path"
nvim "$note_path"
